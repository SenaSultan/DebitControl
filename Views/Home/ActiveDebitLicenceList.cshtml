
@model IEnumerable<DebitControl.Models.GetComputerWithLicence_Result>

@{
    ViewBag.Title = "ActiveDebitLicenceList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">

    <!-- Page Heading -->
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary"> Bilgisayar Lisans Listesi</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th class="text-center">#</th>
                            <th class="text-center">Marka</th>
                            <th class="text-center">Model</th>
                            <th class="text-center">Zimemt No</th>
                            <th class="text-center">Lisans Adı</th>
                            <th class="text-center">Lisans Key</th>
                            <th class="text-center">Lisans Mail</th>
                            <th class="text-center">Lisans Şifre</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th class="text-center">#</th>
                            <th class="text-center">Marka</th>
                            <th class="text-center">Model</th>
                            <th class="text-center">Zimemt No</th>
                            <th class="text-center">Lisans Adı</th>
                            <th class="text-center">Lisans Key</th>
                            <th class="text-center">Lisans Mail</th>
                            <th class="text-center">Lisans Şifre</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @if (Model.Count() > 0)
                        {
                            int sayac = 0;
                            foreach (var item in Model)
                            {
                                sayac++;
                                <tr>
                                    <td class="text-center"><b>@sayac</b></td>
                                    <td class="text-center">@item.computerBrand </td>
                                    <td class="text-center">@item.computerModel </td>
                                    <td class="text-center">@item.computerNumber </td>
                                    <td class="text-center">@item.licenceName </td>
                                    <td class="text-center">@item.licenceKey </td>
                                    <td class="text-center">@item.licenceMail </td>
                                    <td class="text-center">@item.licencePassword </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8">Kayıt bulunamadı</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>


