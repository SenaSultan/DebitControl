@model IEnumerable<DebitControl.Models.GetAllComputerRecords_Result>

@{
    ViewBag.Title = "ComputerList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Tüm Bilgisayar Listesi</h6>
            <a href="/Home/CreateComputer" class="btn btn-success pull-right btn-sm">Bilgisayar Ekle</a>
        </div>

        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th class="text-center">#</th>
                            <th class="text-center">Marka</th>
                            <th class="text-center">Model</th>
                            <th class="text-center">Ad</th>
                            <th class="text-center">Seri Numarası</th>
                            <th class="text-center">Lan Mac</th>
                            <th class="text-center">Wifi Mac</th>
                            <th class="text-center">Windows</th>
                            <th class="text-center">Office</th>
                            <th class="text-center">Zimmet No</th>
                            <th class="text-center">Usb Durum</th>
                            <th class="text-center">Durum</th>
                            <th class="text-center" style="width: 240px;">İşlemler</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th class="text-center">#</th>
                            <th class="text-center">Marka</th>
                            <th class="text-center">Model</th>
                            <th class="text-center">Ad</th>
                            <th class="text-center">Seri Numarası</th>
                            <th class="text-center">Lan Mac</th>
                            <th class="text-center">Wifi Mac</th>
                            <th class="text-center">Windows</th>
                            <th class="text-center">Office</th>
                            <th class="text-center">Zimmet No</th>
                            <th class="text-center">Usb Durum</th>
                            <th class="text-center">Durum</th>
                            <th class="text-center" style="width: 240px;">İşlemler</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @if (Model.Count() > 0)
                        {
                            int sayac = 0;
                            foreach (var item in Model)
                            {
                                sayac++;
                                <tr>
                                    <td class="text-center"><b>@sayac</b></td>
                                    <td class="text-center">@item.computerBrand </td>
                                    <td class="text-center">@item.computerModel </td>
                                    <td class="text-center">@item.computerName </td>
                                    <td class="text-center">@item.computerSerialNumber </td>
                                    <td class="text-center">@item.computerLanMac </td>
                                    <td class="text-center">@item.computerWifiMac </td>
                                    <td class="text-center">@item.computerWin </td>
                                    <td class="text-center">@item.computerOffice </td>
                                    <td class="text-center">@item.computerNumber </td>
                                    <td class="text-center">@item.computerUsbStatus </td>
                                    <td class="text-center">@item.computerStatus </td>
                                    <td class="text-center">
                                        <a href="/Home/DeleteComputer?id=@item.computerId" class="btn btn-danger btn-sm">Sil</a>
                                        <a href="/Home/EditComputer?id=@item.computerId" class="btn btn-primary btn-sm">Düzenle</a>
                                    </td>

                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8">Kayıt bulunamadı</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
