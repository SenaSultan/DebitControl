@model DebitControl.Models.Department

@{
    ViewBag.Title = "Departman Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<button type="submit" onclick="window.location.href = 'DepartmentList';" class="btn btn-warning float-right">Geri Dön</button>

<div class="row">

    <form method="post" action="/Home/CreateDepartment">

        <div class="form-group">
            <label for="departmentName">Departman Adı :</label>
            <input type="text" class="form-control" name="departmentName" id="departmentName" />
        </div>

        <div class="form-group">
            <label for="locationName">Lokasyon Adı :</label>
            <input type="text" class="form-control" name="locationName" id="locationName" />
        </div>

        <button type="submit" class="btn btn-success">Kaydet</button>
    </form>

</div>
