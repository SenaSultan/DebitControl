@model IEnumerable<DebitControl.Models.GetEmployeeData_Result>


<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Tüm Personel Listesi</h6>
        </div>

        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th class="text-center">#</th>
                            <th class="text-center">Ad</th>
                            <th class="text-center">Soyad</th>
                            <th class="text-center">Kullanıcı Ad</th>
                            <th class="text-center">Durum</th>
                            <th class="text-center">Departman Ad</th>
                            <th class="text-center">Lokasyon Ad</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th class="text-center">#</th>
                            <th class="text-center">Ad</th>
                            <th class="text-center">Soyad</th>
                            <th class="text-center">Kullanıcı Ad</th>
                            <th class="text-center">Durum</th>
                            <th class="text-center">Departman Ad</th>
                            <th class="text-center">Lokasyon Ad</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @if (Model.Count() > 0)
                        {
                            int sayac = 0;
                            foreach (var item in Model)
                            {
                                sayac++;
                                <tr>
                                    <td class="text-center"><b>@sayac</b></td>
                                    <td class="text-center">@item.employeeName </td>
                                    <td class="text-center">@item.employeeSurname </td>
                                    <td class="text-center">@item.employeeUsername </td>
                                    <td class="text-center">@item.employeeStatus </td>
                                    <td class="text-center">@item.departmentName </td>
                                    <td class="text-center">@item.locationName </td>

                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8">Kayıt bulunamadı</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
