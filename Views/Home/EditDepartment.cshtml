@model List<DebitControl.Models.GetDepartmentById_Result>
@{
    ViewBag.Title = "Departman Düzenle";
    Layout = "~/Views/Shared/_Layout.cshtml";
    DebitControl.Models.DebitControlEntities entities = new DebitControl.Models.DebitControlEntities();
    

}
<button type="submit" onclick="window.location.href = 'DepartmentList';" class="btn btn-warning float-right">Geri Dön</button>
<div class="row">



    <form method="post" action="/Home/EditDepartment" enctype="multipart/form-data">

        @if (Model.Count() > 0)
        {
            int sayac = 0;
            foreach (var item in Model)
            {
                sayac++;

                <input name="departmentId" type="hidden" id="departmentId" value="@item.departmentId" />

                <div class="form-group">
                    <label for="departmentName">Departman Adı :</label>
                    <input type="text" class="form-control" name="departmentName" id="departmentName" value="@item.departmentName" />
                </div>
                <div class="form-group">
                    <label for="locationName">Lokasyon Adı :</label>
                    <input type="text" class="form-control" name="locationName" id="locationName" value="@item.locationName" />
                </div>

                <button type="submit" class="btn btn-success">Kaydet</button>

            }
        }
        else
        {

        }
    </form>

</div>