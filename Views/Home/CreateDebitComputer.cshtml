
@{    DebitControl.Models.DebitControlEntities entities = new DebitControl.Models.DebitControlEntities();

    ViewBag.Title = "Bilgisayar Zimmet Ekle";

    var employee = entities.GetActiveEmployees().ToList();
    employee.Sort((emp1, emp2) => emp1.employeeName.CompareTo(emp2.employeeName));

    var computer = entities.GetActiveComputers().ToList();
    computer.Sort((emp1, emp2) => emp1.computerNumber.CompareTo(emp2.computerNumber));
    computer.Reverse();
}

<button type="submit" onclick="window.location.href = 'ActiveDebitComputerList';" class="btn btn-warning float-right">Geri Dön</button>

<div class="row">

    <form method="post" action="/Home/CreateDebitComputer">




        <div class="form-group">
            <label for="employeeId">Personel:</label>
            <select class="form-control" name="employeeId" id="employeeId">
                @foreach (var employeeItem in employee)
                {
                    <option value="@employeeItem.employeeId">@employeeItem.employeeName  @employeeItem.employeeSurname</option>
                }
            </select>
        </div>

        <div class="form-group">
            <label for="computerId">Bilgisayar:</label>
            <select class="form-control" name="computerId" id="computerId">
                @foreach (var computerItem in computer)
                {
                    <option value="@computerItem.computerId">@computerItem.computerNumber</option>
                }
            </select>
        </div>

        <button type="submit" class="btn btn-success">Kaydet</button>
    </form>

</div>


