@model DebitControl.Models.Mail
@{
    ViewBag.Title = "CreateMail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<button type="submit" onclick="window.location.href = 'MailList';" class="btn btn-warning float-right">Geri Dön</button>

<div class="row">

    <form method="post" action="/Home/CreateMail">

        <div class="form-group">
            <label for="mailName">Mail Adresi :</label>
            <input type="text" class="form-control" name="mailName" id="mailName" />
        </div>

        <div class="form-group">
            <label for="mailPassword">Mail Şifre :</label>
            <input type="text" class="form-control" name="mailPassword" id="mailPassword" />
        </div>

        <button type="submit" class="btn btn-success">Kaydet</button>
    </form>

</div>


